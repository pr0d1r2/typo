<%= render :partial => 'articles/article', :collection => @articles, :controller => @controller %>

<% unless @pages.item_count <= this_blog.limit_article_display -%>
<p class="pagination">Older posts: <%= pagination_links @pages, :params => { :action => @controller.action_name }.merge(params[:q] ? { :q => params[:q] } : {}) %></p>
<% end -%>
